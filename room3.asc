// room script file

function room_AfterFadeIn(){
  oShip_Still.SetView(7, 1);
  oShip_Still.Animate(0, 1, eRepeat, eNoBlock);
}

function oAlienShip_UseInv(Object *theObject, CursorMode mode)
{
  if (cEgo.ActiveInventory == iEngine){
    if(Pistons_in_engine == 3){
      //cEgo.Walk(159, 754,  eBlock,  eWalkableAreas);
      cEgo.LoseInventory(iEngine);
      Display("You now have an engine");
      Completed_Task++;
    }
    else{
      cEgo.Say("Damn, its a shame I dont have all my moters");
    }
  }  
  if (cEgo.ActiveInventory == iOrbe){
    //cEgo.Walk(159, 754,  eBlock,  eWalkableAreas);
    cEgo.LoseInventory(iOrbe);
    Display("You now have your power source");
    Completed_Task++;
  }
}
function oAlienShip_Interact(Object *theObject, CursorMode mode)
{
  if (Completed_Task == 3){
    cEgo.ChangeRoom(7, 398, 263);
  }
  else{
    cEgo.Say("Damn I wish i could enter my space ship");
    cEgo.Say("I need all of the peices that fell off before I do that");
  }
}


function oShip_Still_AnyClick(Object *theObject, CursorMode mode)
{
  cEgo.Walk(302, 217, eBlock,  eWalkableAreas);
  cShip.ChangeRoom(1, 224, 109);
  cShip.SetAsPlayer();
}

function hHotspot1_WalkOn(Hotspot *theHotspot)
{
